   <div class="post_detail_card_header"">
   <div class="parent">
    <p class ="post_title_card"> Post # <%=@post.id%> by <span class="post_author_name"><%=@post.author.name%></span></p>
   <h5><%= @post.title %></h5>
   <p><%= @post.text %></p>
  </div>
    <p class="post_counters">Comments: <%=@post.comments_counter%> Likes: <%=@post.likes_counter%></p>
  
  </div>

<div class="my_comments">
  <% if @comments.empty? %>
    <p>No Comments</p>
  <% else %>
    <% @comments.each do |comment| %>
      <p><%= comment.author.name %>: <%= comment.text %></p>
    <% end %>
  <% end %>
</div>

<div class="comment_form_holder">
  <h3>Leave a comment</h3>
  <div class="form_buttons">
    <%= render 'comments/form', comment: @comment %>
  </div>
</div>

<div class="like_form_holder">
  <div class="form_buttons">
    <%= render 'likes/form', like: @like %>
  </div>
</div>
